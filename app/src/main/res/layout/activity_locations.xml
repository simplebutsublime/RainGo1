<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationsPage">

    <TextView android:id="@+id/label_location"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/label_location"
        android:textSize="24sp"
        />
    <EditText android:id="@+id/edit_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_location"
        android:hint="@string/edit_locatoin_hint"
        android:layout_toLeftOf="@+id/button_location_search"
        android:layout_alignParentLeft="true" />

    <Button android:id="@+id/button_location_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_location_search"
        android:onClick="sendLocation"
        android:layout_alignTop="@+id/edit_location"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>