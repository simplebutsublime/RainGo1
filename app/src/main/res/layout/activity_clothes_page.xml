<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/label_clothes_add"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Add clothing item"
        android:textSize="24sp"/>

    <EditText android:id="@+id/edit_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_clothes_add"
        android:hint="Enter item name"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <EditText android:id="@+id/edit_item_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter item color"
        android:layout_below="@+id/edit_item_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/view_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_item_color"
        android:textSize="24sp"
        android:text="Enter temperature"/>

    <Button android:id="@+id/button_enter_clothes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_location_search"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_below="@+id/view_temperature"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/view_clothing_type"
        android:layout_below="@+id/seekBar"
        android:text="Select clothing type"
        android:textSize="24sp"
        android:layout_marginTop="15dp"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_below="@+id/view_clothing_type"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp" />

</RelativeLayout>