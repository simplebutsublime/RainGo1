<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/label_add_event"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Add Event"
        android:textSize="24sp"
        />

    <EditText android:id="@+id/edit_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_add_event"
        android:hint="Enter event name"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <EditText android:id="@+id/edit_event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_event_name"
        android:hint="Enter event location"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_event_location"
        android:layout_marginTop="10dp"
        android:text="Start Time"
        android:textSize="24sp"
        android:id="@+id/view_start_time" />

    <Button android:id="@+id/button_location_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_location_search"
        android:onClick="sendLocation"
        android:layout_alignParentBottom="true"/>

    <TextView
        android:id="@+id/view_time_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_start_time"
        android:layout_marginTop="10dp"
        android:text="12:00:00"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/view_end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_time_start"
        android:layout_marginTop="10dp"
        android:text="End Time"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/view_time_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_end_time"
        android:layout_marginTop="10dp"
        android:text="13:00:00"
        android:textSize="24sp"/>

</RelativeLayout>